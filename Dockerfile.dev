FROM mcr.microsoft.com/playwright

ENV PWUSER pwuser

COPY package*.json ./

# openjdk-11-jdk tesseract-ocr-rus
RUN apt-get update && \
    apt-get install -y sudo curl git && \ 
    usermod -aG sudo $PWUSER && \
    echo '%sudo ALL=(ALL) NOPASSWD:ALL' | tee -a /etc/sudoers && \
    npm i && \
    npx playwright install-deps

RUN curl -s https://raw.githubusercontent.com/nektos/act/master/install.sh | sudo bash

WORKDIR /home/$PWUSER/app

# RUN git clone https://github.com/Audiveris/audiveris.git 
# RUN cd audiveris && \
#     ./gradlew build && \
#     tar -xf build/distributions/Audiveris-5.2.5.tar

RUN sudo chown -R $PWUSER:$PWUSER /home/$PWUSER/app

COPY --chown=$PWUSER:$PWUSER . .

EXPOSE 3000

CMD ["npm", "run", "dev"]